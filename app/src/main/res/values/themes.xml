<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BabySitterPriceCalculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BabySitterPriceCalculator" parent="Base.Theme.BabySitterPriceCalculator" />

    <style name="CustomTimePickerStyle">
        <item name="android:timePickerDialogTheme">@style/CustomTimePickerDialogStyle</item>
    </style>

    <style name="CustomTimePickerDialogStyle" parent="@android:style/Theme.Material.Light.Dialog">
        <item name="android:timePickerStyle">@style/CustomTimePickerStyleInternal</item>
    </style>

    <style name="CustomTextAppearanceTimePickerHeader">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CustomTimePickerStyleInternal">
        <item name="android:headerTimeTextAppearance">@style/CustomTextAppearanceTimePickerHeader</item>
        <item name="android:timePickerMode">clock</item>
        <item name="android:min">17</item> <!-- Set the start time range here -->
        <item name="android:max">4</item> <!-- Set the end time range here -->
    </style>

    <style name="CustomTextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">@android:color/black</item>

    </style>

    <style name="BaseButton" parent="Widget.AppCompat.Button">
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:background">@drawable/button_ripple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:height">@dimen/base_button_height</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>